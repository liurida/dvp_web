<!DOCTYPE html>
<html>
  <head>
    <title>DvpWeb</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container-fluid">
      <!-- head -->
      <div class="navbar ">
        <div class="navbar-inner">
          <a class="brand" href="#">DVP</a>
          <ul class="nav">
            <li>
            <a href="#" class="active">Home</a>
            </li>
            <li>
            <a href="#">About</a>
            </li>
          </ul>

          <ul class="nav pull-right">
            <% if current_user %>

              <li>
              <a href=#>
                <img src='/serve_images/<%= current_user.login%>'
                         class='img-rounded'
                         height='20' width="20">
              <%= current_user.username %>
            </a>
              </li>
              <li>
              <%= link_to("Sign Out",   session_destroy_path,:method => :delete, :title => "Sign Out" ) %>
              </li>
            <% else %>

              <li>
              <%= link_to("Sign In", session_new_path, :title => 'Sign In') %>
              </li>

            <% end %>

          </ul>
        </div>
      </div>
      <!-- head end -->

      <!-- main -->
      <%= render "layouts/show_flash" %>
      <%= yield %>
      <!-- main end -->

    </div>
  </body>
</html>
