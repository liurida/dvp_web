    <%= simple_form_for(@ec_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :proc_name %>
    <%= f.input :description %>
    <%= f.input :message %>
    <%= f.input :restriction %>
    <%= f.input :reviewer, collection: EcItem::REVIEWER %>
    <%= f.input :tested_status %>
   
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
