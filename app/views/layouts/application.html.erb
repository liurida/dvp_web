<!DOCTYPE html>
<html>
  <head>
    <title>DvpWeb</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- head -->
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">DVP</a>
          <ul class="nav">
            <li>
            <a href="#" class="active">Home</a>
            </li>
            <li>
            <a href="#">About</a>
            </li>
            <li>

            <%= search_form_for @q, :url => search_path,
                    :html => {:class => "form-search", :style => "margin-top:5px; margin-bottom:5px"} do |f| %>
              <div class="input-append">
                <%= f.text_field :name_cont , :class => "span2 search-query" %>
                <button type="submit" class="btn"><i class="icon-search"></i>Search</button>
              </div>
          <% end %>

            </li>
          </ul>

          <ul class="nav pull-right">
            <% if current_user %>

              <li>
              <a href=#>
                <img src='/serve_images/<%= current_user.login%>'
                class='img-rounded'
                height='20' width="20">
                <%= current_user.username %>
              </a>
              </li>
              <li>
              <%= link_to("Sign Out",   session_destroy_path,:method => :delete, :title => "Sign Out" ) %>
              </li>
            <% else %>

              <li>
              <%= link_to("Sign In", session_new_path, :title => 'Sign In') %>
              </li>

            <% end %>

          </ul>
        </div>
      </div>
    </div>
    <!-- head end -->
    <div class="container-fluid">

      <!-- main -->
      <%= render "layouts/show_flash" %>
      <%= yield %>
      <!-- main end -->

    </div>
  </body>
</html>
