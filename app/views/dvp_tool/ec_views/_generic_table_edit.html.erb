<small>
<table class= 'table table-bordered table-condensed table-hover'>
  <tr>
    <% ec_cols(session[:ec_view]).each do |col_name| %>
      <th> <%= col_name.titleize %> </th>
    <% end %>
    <th> Action </th>
  </tr>

<% @ec_items.each do |ec_item| %>
  <tr>
    <% ec_cols(session[:ec_view]).each do |col_name| %>
      <td> <%= ec_item[col_name]  %> </td>
    <% end %>
    <td>
      <%= link_to raw('<i class="icon-th-list"></i>'), ec_item %>
      <%= link_to raw('<i class="icon-edit"></i>'), edit_ec_item_path(ec_item) %>
      <%= link_to raw('<i class="icon-trash"></i>'), ec_item, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
</small>

<br/>

